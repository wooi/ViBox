<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nav_header_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/nav_header_bg" />

    <ImageView
        android:id="@+id/nav_header_user_imager"
        android:layout_width="@dimen/nav_header_user_imager_size"
        android:layout_height="@dimen/nav_header_user_imager_size"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/nav_header_user_imager_maraginBottom" />

    <TextView
        android:id="@+id/nav_header_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="test" />
</FrameLayout>