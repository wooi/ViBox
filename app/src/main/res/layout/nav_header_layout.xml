<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nav_header_bg_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/nav_header_bg" />

        <ImageView
            android:id="@+id/nav_header_user_imager_iv"
            android:layout_width="@dimen/nav_header_user_imager_size"
            android:layout_height="@dimen/nav_header_user_imager_size"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/nav_header_user_imager_maraginBottom" />

        <TextView
            android:id="@+id/nav_header_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="test" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_backup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_star_white_24dp"
            android:gravity="center"
            android:text="我的收藏"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_file_download_white_24dp"
            android:gravity="center"
            android:text="离线下载"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>